{
  "buildCommand": "npm run generate:manifest && node scripts/generate-thumbnails-safe.js && next build",
  "installCommand": "npm install --include=optional",
  "framework": "nextjs",
  "env": {
    "STATIC_EXPORT": "false",
    "NEXT_PUBLIC_ENABLE_VERCEL_ANALYTICS": "1"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/v1/ai-space/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/v1/cron/daily-digest/",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/cron/weekly-digest/",
      "schedule": "0 2 * * 1"
    },
    {
      "path": "/api/v1/cron/reminders/",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/v1/cron/email-queue/",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/v1/cron/job-queue/",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/v1/cron/auto-update-bookings/",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-orphaned-deposits/",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-expired-holds/",
      "schedule": "0 1 * * *"
    }
  ]
}

