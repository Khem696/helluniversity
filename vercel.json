{
  "buildCommand": "npm run generate:manifest && node scripts/generate-thumbnails-safe.js && next build",
  "installCommand": "npm install --include=optional",
  "framework": "nextjs",
  "env": {
    "STATIC_EXPORT": "false",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_ENABLE_VERCEL_ANALYTICS": "1"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/email-queue",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/job-queue",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/auto-update-bookings",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/cleanup-orphaned-deposits",
      "schedule": "0 2 * * *"
    }
  ]
}

